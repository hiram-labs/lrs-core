{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "parser": "@babel/eslint-parser",
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DEVTOOLS__": true,
    "__SITE_URL__": true,
    "__DISABLE_SSR__": true,
    "__GOOGLE_ENABLED__": true,
    "socket": true,
    "webpackIsomorphicTools": true,
    "cy": true
  },
  "rules": {
    //2-error 1-warning 0-pass
    "no-console": 0,
    "react/prop-types": 0,
    "react/display-name": 0,
    "jest/expect-expect": 0,
    "jest/no-export": 0
  }
}
